{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "compilerOptions": {
    "incremental": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "strict": false,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "include": [
    "packages/chat-ui/src/**/*.ts",
    "packages/chat-ui/src/**/*.d.ts",
    "packages/chat-ui/src/**/*.tsx",
    "packages/chat-ui/src/**/*.vue"
  ]
}
